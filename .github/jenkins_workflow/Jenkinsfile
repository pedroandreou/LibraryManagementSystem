pipeline{
    agent any
    stages {
        stage('Version') {
            steps {
                sh 'python3 --version'
            }
        }
        stage('Display IP') {
            steps {
                sh 'echo $DISPLAY'
            }
        }
        stage('Build') {
            steps {
                sh 'export DISPLAY=$DISPLAY && xhost + && sudo apt-get install x11-xserver-utils && virtualenv && sudo venv && . venv/bin/activate && pip install -r requirements.txt && python src/menu.py'
            }
        }
    }
}
